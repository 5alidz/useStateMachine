  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/react": "^17.0.3",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^5.1.3",
    "react": ">=16.8.0",
    "react-test-renderer": "^17.0.1",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^3.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/usemachine.cjs.production.min.js",
